<div class="container">
    <h1>Proveedores</h1>
    <hr>
    <div class="table-responsive table-bordered">
        <div class="panel filterable">
            <div class="panel-heading">
              <hr>
              <div class="pull-right">
                  <button class="btn btn-primary btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span> Filtrar </button>
              </div>
            </div>
            <table class="table table-hover">
                <thead>
                    <tr class="filters">
                        <th><input type="text" class="form-control" placeholder="Nombre" disabled></th>
                        <th><input type="text" class="form-control" placeholder="Actividad" disabled></th>
                        <th><input type="text" class="form-control" placeholder="Ciudad" disabled></th>
                        <th><input type="text" class="form-control" placeholder="Dirección" disabled></th>
                        <th colspan="2"></th>
                    </tr>
                </thead>
                <tbody>
                  <% @providers.each do |provider| %>
                  <tr>
                    <td><%= provider.nombre %></td>
                    <td><%= provider.actividad %></td>
                    <td><%= provider.ciudad %></td>
                    <td><%= provider.direccion %></td>
                  <% if user_signed_in? and current_user != provider %>
                    <td><%= button_to 'Ver', show_provider_path(provider.id), :class => 'btn btn-xs btn-warning'%></td>
                    <% if @user_providers.include? provider %>
                    <td>En mi lista</td>
                    <%else%>
                    <td><%= button_to 'Añadir a mi lista', select_provider_path(provider.id), :class => 'btn btn-xs btn-success'%></td>
                    <%end%>
                  </tr>
                  <%end%>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>