<div class="row">
  <div class="col-md-4 col-centered col-sm-offset-4">
    <%= bootstrap_form_for(@product, local: true) do |form| %>
      <% if product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
          <% product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.text_field :codigo, id: :product_codigo %>
      </div>

      <div class="field">
        <%= form.text_field :nombre, id: :product_nombre %>
      </div>

      <div class="field">
        <%= form.text_area :descripcion, id: :product_descripcion %>
      </div>

      <div class="field">
        <%= form.number_field :precio, id: :product_precio %>
      </div>

      <div class="field">
        <%= form.text_field :estado, id: :product_estado %>
      </div>
    
      <div class="row" align="center">
        <%= form.submit "Guardar", :class => "btn btn-md btn-primary"%>
        <% end %>
        <%= link_to 'Cancelar', :back %>
      </div>

  </div>
</div>
