<div class="container">
  <h1>Editar cuenta</h1><br>
  <div class="row">
    <div class="col-md-6 col-centered">
    <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.text_field :nombre, autofocus: true, required: true %>
      </div>

      <div class="field">
        <%= f.text_field :actividad, autofocus: true, required: true %>
      </div>

      <div class="field">
        <%= f.text_area :descripcion, autofocus: true, required: true, label: "Descripción", rows: "9" %>
      </div>

      <div class="field">
        <%= f.text_field :nit, autofocus: true, required: true %>
      </div>

    </div>
    <div class="col-md-6 col-centered">

      <div class="field">
        <%= f.select(:ciudad, ["Pereira","Armenia","Manizales"], required: true) %>
      </div>

      <div class="field">
        <%= f.text_field :direccion, autofocus: true, required: true, label: "Dirección" %>
      </div>

      <div class="field">
        <%= f.text_field :telefonos, autofocus: true, required: true, label: "Teléfonos" %>
      </div>

      <div class="field">
        <%= f.email_field :email, autofocus: true, label: "Correo electrónico" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", label: "Contraseña   (dejar en blanco  si no desea cambiarla)", placeholder: "#{@minimum_password_length} caracteres mínimo" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", label: "Confirmación de contraseña" %>
      </div>

      <div class="field">
        <%= f.password_field :current_password, autocomplete: "off", label: "Actual contraseña  (la necesitamos para confirmar cambios" %>
      </div>

    </div>
    
    <div class="row" align="center">
      <%= f.submit "Guardar", :class => "btn btn-lg btn-primary" %>
    
      <% end %>
      
      <h3>Cancelar mi cuenta</h3>

      <p><%= button_to "Cancelar cuenta", registration_path(resource_name), data: { confirm: "Estas seguro?" }, method: :delete, :class => "btn btn-sm btn-danger" %></p>

      <%= link_to "Regresar", :back %>
    </div>
  </div>
</div>
