<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Proveedor</th>
      <th>Descripcion</th>
      <th>Nota</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.cliente %></td>
        <td><%= order.proveedor %></td>
        <td><%= order.descripcion %></td>
        <td><%= order.nota %></td>
        <td><%= order.estado %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

